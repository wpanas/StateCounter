<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/counter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/counter_activity_link" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/Widget.AppCompat.Button.Colored" android:layout_marginBottom="286dp"
            app:layout_constraintBottom_toTopOf="@+id/timer_activity_link" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" android:onClick="goToCounter"/>
    <Button
            android:text="@string/timer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/timer_activity_link"
            app:layout_constraintTop_toBottomOf="@+id/counter_activity_link" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent" style="@android:style/Widget.DeviceDefault.Button"
            android:layout_marginEnd="32dp" android:layout_marginStart="32dp" android:onClick="goToTimer"/>
</androidx.constraintlayout.widget.ConstraintLayout>